}  
f
 ile.close();  
}  
// Function to analyze monthly spending 
void analyzeMonthlySpending(const string& 
| Amount"  
month) { ifstream file("expenses.txt"); if 
(!file) { cerr << "Error opening file!" << endl; 
return;  
}  
string line; double totalSpent =  
0.0; int count = 0;  
while (getline(file, line)) { stringstream ss(line); 
string date, category; double amount; ss >> 
date >> category >> amount;  
// Check if the date belongs to the given month  
(format YYYY-MM) if (date.substr(0, 7) == month)  
{  
totalSpent += amount; count++;  
} }  
f
 ile.close(); 
cout << "Total 
spent in " << 
month << ": $" 
<< fixed << 
setprecision(
 2)  
<< totalSpent  
<< endl; cout << "Number of 
transactions: " <<  
count << endl;  
}  
// Main menu void displayMenu() { 
